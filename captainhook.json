{
    "config": {
        "fail-on-first-error": true,
        "git-directory": ".git",
        "run-mode": "local",
        "verbosity": "normal"
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": {
                    "paths": ["src/", "tests/"]
                }
            },
            {
                "action": "vendor/bin/php-cs-fixer fix --dry-run --diff",
                "options": {
                    "label": "Checking code style..."
                }
            },
            {
                "action": "vendor/bin/phpstan analyse --no-progress",
                "options": {
                    "label": "Running PHPStan analysis..."
                }
            },
            {
                "action": "vendor/bin/psalm --no-progress",
                "options": {
                    "label": "Running Psalm analysis..."
                }
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "vendor/bin/phpunit --testsuite unit",
                "options": {
                    "label": "Running unit tests..."
                }
            }
        ]
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Regex",
                "options": {
                    "regex": "/(^(feat|fix|docs|style|refactor|perf|test|build|ci|chore|revert)(\\(.+\\))?: .{1,100}$)|(^Merge .+$)/",
                    "error": "Commit message must follow conventional commits format: type(scope): description"
                }
            }
        ]
    }
}